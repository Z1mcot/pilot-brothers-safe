    <None Remove="src\logo.jpg" />
    <None Remove="src\refresh.png" />
    <None Remove="src\safe\Door latches.png" />
    <None Remove="src\safe\Safe body.png" />
    <None Remove="src\safe\Safe door opened.png" />
    <None Remove="src\safe\Safe door.png" />
